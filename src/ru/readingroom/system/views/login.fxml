                  <Image url="@../resources/librarian.png" />
               </image>
            </ImageView>
            <Button fx:id="enterAsLibrarianButton" cancelButton="true" layoutX="233.0" layoutY="239.0" mnemonicParsing="false" prefHeight="58.0" prefWidth="205.0" style="-fx-background-radius: 30; -fx-background-color: #00540c;" text="Библиотекарь" textFill="WHITE">
