         <children>
            <Label layoutX="161.0" layoutY="42.0" text="Войти как" textFill="WHITE">
               <font>
                  <Font name="System Bold" size="59.0" />
               </font>
            </Label>
            <Button fx:id="enterAsAdminButton" cancelButton="true" layoutX="233.0" layoutY="167.0" mnemonicParsing="false" prefHeight="58.0" prefWidth="205.0" style="-fx-background-radius: 30; -fx-background-color: #541e00;" text="Администратор" textFill="WHITE">
               <font>
                  <Font name="System Bold" size="20.0" />
               </font></Button>
            <ImageView fitHeight="58.0" fitWidth="58.0" layoutX="174.0" layoutY="167.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../resources/admin.png" />
               </image>
            </ImageView>
            <ImageView fitHeight="58.0" fitWidth="69.0" layoutX="161.0" layoutY="239.0" pickOnBounds="true" preserveRatio="true">
